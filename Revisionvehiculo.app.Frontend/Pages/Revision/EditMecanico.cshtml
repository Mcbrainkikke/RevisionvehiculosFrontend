@page
@model Revisionvehiculo.app.Pages.EditMecanicoModel
@{
}
<h2> Edicion De Datos: @Model.Mecanico.Nombre</h2>
<form method="post">
    <input type="hidden" asp-for="Mecanico.Id"/>

    <div class="form-group">
        <label asp-for="Mecanico.Nombre"></label>
        <input asp-for="Mecanico.Nombre" class="form.control">
        <span class="text-danger" asp-validation-for="Mecanico.Nombre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mecanico.Apellido"></label>
        <input asp-for="Mecanico.Apellido" class="form.control">
        <span class="text-danger" asp-validation-for="Mecanico.Apellido"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mecanico.Telefono"></label>
        <input asp-for="Mecanico.Telefono" class="form.control">
        <span class="text-danger" asp-validation-for="Mecanico.Telefono"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mecanico.Direccion"></label>
        <input asp-for="Mecanico.Direccion" class="form.control">
        <span class="text-danger" asp-validation-for="Mecanico.Direccion"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mecanico.NivelEstudios"></label>
        <input asp-for="Mecanico.NivelEstudios" class="form.control">
        <span class="text-danger" asp-validation-for="Mecanico.NivelEstudios"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>

</form>
<a asp-page="./ListMecanicos" class="btn-default">Lista</a>

